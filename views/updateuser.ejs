<!-- including header -->
<%- include('include/_header')%>

  <!-- main section -->
     <main id="site-main">
         <div class="container">
             <div class="_user">
                 <a href="/" class="all_user_link"><i class="fas fa-angle-double-left"></i></i>All Users</a>
             </div>

             <h2 class="new_user_heading">Update the user here</h2>
             <!-- form handling -->
             <form action='/api/users/<%=user._id%>?_method=PUT' method="POST" class="user-form">
             <input type="hidden" name="_method" value="PUT">
                <div class="form-div">
                    <div class="for_group">
                        <label for="name">Names</label>
                        <input type="hidden" name="id" value="<%=user._id%>">
                        <input class="text" type="text" name="name" value="<%=user.name%>" placeholder="Aman Singh">
                    </div>
                    <div class="for_group">
                        <label for="email">Email</label>
                        <input class="text" type="email" name="email" value="<%=user.email%>" placeholder="example@gmail.com">
                    </div>
                    <div class="for_group">
                        <label for="gender">Gender</label>
                        <div class="radio_inline">
                            <input type="radio" name="gender" value="Male" <%=user.gender == 'Male'?'checked':''%>>
                            <label for="gender" class="radio_input">Male</label>
                        </div>

                        <div class="radio_inline">
                            <input type="radio" name="gender" value="Female" <%=user.gender == 'Female'?'checked':''%>>
                            <label for="gender" class="radio_input">Female</label>
                        </div>
                     </div>
                    <div class="for_group">
                        <label for="status">Status</label>
                        <div class="radio_inline">
                            <input type="radio" name="status" value="Active" <%=user.status == 'Active'?'checked':''%>>
                            <label for="status" class="radio_input">Active</label>
                        </div>

                        <div class="radio_inline">
                            <input type="radio" name="status" value="Inactive" <%=user.status == 'Inactive'?'checked':''%>>
                            <label for="status" class="radio_input">Inactive</label>
                        </div>
                     </div>

                     <div class="for_group">
                         <button type="submit" class="submit_btn">Save</button>
                    </div>
                </div>
            </form>
         </div>
     </main>

<!-- including footer -->
<%- include('include/_footer')%>